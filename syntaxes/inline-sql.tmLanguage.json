{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "inline-sql",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.inline-sql",
                    "match": "\\b(if|while|for|return)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.inline-sql",
            "begin": "('''|\"\"\")",
            "end": "(\\1)",
            "patterns": [
                {
                    "name": "constant.character.escape.inline-sql",
                    "match": "(?im)(--sql.*)"
                }
            ]
        }
    },
    "scopeName": "source.py"
}